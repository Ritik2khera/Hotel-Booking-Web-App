    <body>
      <div class="row ">
        <div class="col-8 offset-2" >
        <div class="listing  mt-4 mb-4">  <h3>Create new Listings</h3>
            <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3 ">
                    <label for="title" class="form-label ">Title</label>
                    <input type="text" name="listing[title]" id="" placeholder="enter your title" required class="form-control " 
                        >
                        <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3  ">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" placeholder="enter description"required
                        class="form-control"></textarea>
                        <div class="invalid-feedback">Please Enter Description</div>

                </div>
                <!-- <div class="mb-3  ">
                    <label for="image" class="form-label">Image link</label>
