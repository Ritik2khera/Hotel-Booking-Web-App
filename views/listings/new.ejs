                <div class="mb-3  ">
                    <label for="image" class="form-label">upload Image</label>
                    <input type="file" name="listing[image]" class="form-control "required
                        >
                        <div class="invalid-feedback">Please Enter a valid image link</div>
                </div>
                <div class="mb-3 ">
                    <label for="price" class="form-label">Price</label>
                    <input type="" name="listing[price]" placeholder="enter price" class="form-control" required >
                    <div class="invalid-feedback">Enter a valid price</div>


                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="enter your title" class="form-control"
                        required>
                        <div class="invalid-feedback">Please Enter a Valid Country name</div>

                </div>
                <div class="mb-3  ">
                    <label for="location" class="form-label">Location</label>

                    <input type="text" name="listing[location]" placeholder="enter location" class="form-control "
                        required>
                        <div class="invalid-feedback">Please Enter a Valid location</div>

                </div>
                <button class="btn btn-dark">Add</button>
            </form>   
        </div></div></div>
       
